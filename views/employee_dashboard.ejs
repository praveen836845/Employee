<% if(locals.user) {%>
  <script src="https://cdn.tailwindcss.com"></script>
<div class="container-fluid">
  <div class="row">
    <!-- Assigned reviews -->
    <div class="col-md-12 col-lg-7 my-2">
      <h1 class="text-center text-3xl font-bold text-green-400 my-10">Assigned reviews</h1>
      <div class="d-flex justify-content-center align-items-center ml-40 w-full">
        <div
          class="d-flex flex-wrap justify-content-center justify-content-lg-start  w-full m-auto "
        >
          <% for(review of assignedReviews) {%>
          <div class="col-8 col-lg-5 p-2 m-3 rounded shadow">
            <form
              action="/review/create/<%=employee._id%>"
              class="d-flex flex-column my-3 "
              method="POST"
            >
            <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
<lottie-player class="m-auto" src="https://assets5.lottiefiles.com/packages/lf20_m0D4rj.json"  background="transparent"  speed="1"  style="width: 100px; height: 100px;"  loop  autoplay></lottie-player>
              <div class="mb-3">
                <label for="recipient " class="fw-semibold">Recipient: </label>
                <input
                  type="email"
                  class="form-control mt-2"
                  id="recipient"
                  value="<%= review.email %>"
                  readonly
                  name="recipient_email"
                />
              </div>
              <div class="mb-3">
                <label for="feedback-form" class="form-label fw-semibold"
                  >Feedback:</label
                >
                <textarea
                  class="form-control"
                  id="feedback-form"
                  name="feedback"
                  rows="3"
                ></textarea>
              </div>
              <button class="bg-black text-white font-semibold rounded-xl px-3 py-2" type="submit">
                Submit
              </button>
            </form>
          </div>
          <%} %>
        </div>
      </div>
    </div>

    <!-- Feedbacks given by others -->
    <div class="col-12 col-lg-5 my-2">
      <h1 class="text-center text-3xl font-bold text-red-400 my-10">Feedbacks by others</h1>

      <div class="d-flex flex-column justify-content-center align-items-center my-3">
        <% for (review of reviewsFromOthers) {%>
        <div class="p-2 border rounded my-2 shadow-lg rounded-lg" style="width: 80%">
          <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
          <lottie-player class="m-auto" src="https://assets5.lottiefiles.com/private_files/lf30_ytgcbwdq.json"  background="transparent"  speed="1"  style="width: 200px; height: 200px;"  loop  autoplay></lottie-player>          <dl>
            <dt class="fw-semibold my-2">
              Reviewer:
              <br>
              <div class="fw-normal w-full border-[1px] rounded-md  py-2 px-3 my-2">
                <%= review.reviewer.email %>(<%= review.reviewer.username %>)
              </div>
            </dt>
            <dt class="fw-semibold">
              Feedback:
              <div class="fw-normal w-full border-[1px] rounded-md  py-2 px-3 my-2"> <%= review.review %> </div>
            </dt>
          </dl>
        </div>
        <%} %>
      </div>
    </div>
  </div>
</div>
<%} %>
